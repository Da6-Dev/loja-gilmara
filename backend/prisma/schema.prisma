generator client {
  provider = "prisma-client-js"
  // Não precisa de 'output', ele vai automaticamente para node_modules/@prisma/client
}

datasource db {
  provider = "postgresql"
  // Lembre-se: a URL de conexão agora fica apenas no prisma.config.ts ou env
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}